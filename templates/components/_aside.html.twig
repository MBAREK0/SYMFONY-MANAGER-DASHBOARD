{# templates/components/_aside.html.twig #}

<div>
	<div class="text-white">
		<div class="flex p-2  bg-[#000]">
			<div class="flex py-3 px-2 items-center">
				<p class="text-2xl text-indigo-600 font-semibold">MY</p>
			</p<pclass="ml-2font-semibolditalic">
			MANAGER</p>
	</div>
</div>
<div class="flex justify-center">
	<div
		class="w-full flex justify-center flex-col items-center">
		{# https://i.pinimg.com/originals/0b/2d/44/0b2d4498a4228e885f52ea1b2c001923.gif #}
		<img class=" hidden h-24 w-24 rounded-full sm:block object-cover mr-2 border-4 border-indigo-600 whiteShadow" src="https://i.pinimg.com/736x/9e/89/92/9e8992dc6e39307dad44c05c03df859d.jpg" alt="profile">
		<p class="font-bold text-base  text-white 00 pt-2 text-center ">DONQUIXOTE DOFLAMINGO
		</p>
	</div>
</div>
<div>
	<ul class="mt-6 leading-10">
		<li class="relative px-2 py-1 ">
			<a class=" {{ app.request.attributes.get('_route') == 'app_home' ? ' bg-indigo-600 rounded-md hover:bg-indigo-700    inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer  p-1' : 'p-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}" href="{{ path('app_home') }}">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
				</svg>
				<span class="ml-4">Dashboard</span>
			</a>
		</li>
		<li class="relative px-2 py-1" x-data="{ Open : false  }">
			{% if app.request.attributes.get('_route') in ['app_personal_information', 'app_projects','app_skills','app_media'] %}
				<div class=" inline-flex items-center justify-between w-full text-base font-semibold transition-colors duration-150 text-white 00  cursor-pointer  bg-indigo-600 rounded-md hover:bg-indigo-700  p-1" x-on:click="Open = !Open">
				{% else %}
					<div class="p-1 inline-flex items-center justify-between w-full text-base font-semibold transition-colors duration-150 text-white 00  cursor-pointer " x-on:click="Open = !Open">
					{% endif %}
					<span class="inline-flex items-center  text-sm font-semibold text-white  ">
						<img src="{{ asset('images/svg/portfolio.svg') }}" class="h-5 w-5 text-white 00" alt="portfolio">
						<span class="ml-4">PORTFOLIO SPACE</span>
					</span>
					<span>
						<img x-show="!Open" src="{{ asset('images/svg/right_arrow.svg') }}" class="h-5 w-5 text-white" alt="right arrow">
						<img x-show="Open" src="{{ asset('images/svg/right_arrow.svg') }}" class="h-5 w-5 text-white transform rotate-90" alt="under arrow">
					</span>


				</div>

				<div x-show.transition="Open" style="display:none;">
					<ul x-transition:enter="transition-all ease-in-out duration-300" x-transition:enter-start="opacity-25 max-h-0" x-transition:enter-end="opacity-100 max-h-xl" x-transition:leave="transition-all ease-in-out duration-300" x-transition:leave-start="opacity-100 max-h-xl" x-transition:leave-end="opacity-0 max-h-0" class="  mt-2 px-2 space-y-2 overflow-hidden text-sm font-medium  rounded-md  " aria-label="submenu">

						<li class=" {{ app.request.attributes.get('_route') == 'app_personal_information' ? ' border-b-2  whiteShadow  border-indigo-600 rounded-md   inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' : ' inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}">
							<div class="px-1   rounded-md">
								<div class="flex items-center">
									<img src="{{ asset('images/svg/personal_information.svg') }}" class="h-4 w-4 text-white 00" alt="">
									<a href="{{ path('app_personal_information') }}" class="w-full ml-2  text-sm font-semibold  text-white ">Personal information</a>
								</div>
							</div>
						</li>
						<li class=" {{ app.request.attributes.get('_route') == 'app_projects' ? ' border-b-2 whiteShadow  border-indigo-600 rounded-md py-1  inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' : 'py-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}">
							<div class="px-1   rounded-md">
								<div class="flex items-center">
									<img src="{{ asset('images/svg/projects.svg') }}" class="h-5 w-5 text-white 00" alt="">
									<a href="{{ path('app_projects') }}" class="w-full ml-2  text-sm font-semibold  text-white ">Projects</a>
								</div>
							</div>
						</li>
						<li class=" {{ app.request.attributes.get('_route') == 'app_media' ? ' border-b-2 whiteShadow  border-indigo-600 rounded-md py-1  inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' : 'py-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}">
							<div class="px-1   rounded-md">
								<div class="flex items-center">
									<img src="{{ asset('images/svg/media.svg') }}" class="h-5 w-5 text-white 00" alt="">
									<a href="{{ path('app_media') }}" class="w-full ml-2  text-sm font-semibold  text-white ">Media</a>
								</div>
							</div>
						</li>
						<li class=" {{ app.request.attributes.get('_route') == 'app_skills' ? ' border-b-2 whiteShadow  border-indigo-600 rounded-md py-1  inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' : 'py-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}">
							<div class="px-1   rounded-md">
								<div class="flex items-center">
									<img src="{{ asset('images/svg/skills.svg') }}" class="h-5 w-5 text-white 00" alt="">
									<a href="{{ path('app_skills') }}" class="w-full ml-2  text-sm font-semibold  text-white ">Skills</a>
								</div>
							</div>
						</li>
					</ul>
				</div>
			</li>
		</li>
		<li class="relative px-2 py-1 ">
			<a class=" {{ app.request.attributes.get('_route') == 'app_calendar' ? ' bg-indigo-600 rounded-md hover:bg-indigo-700    inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer  p-1' : 'p-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}" href="#">
				<img src="{{ asset('images/svg/calendar.svg') }}" class="h-6 w-6 text-white 00" alt="">
				<span class="ml-4">CALENDRIER</span>
			</a>
		</li>
		<li class="relative px-2 py-1" x-data="{ Open : false  }">
			{% if app.request.attributes.get('_route') in ['app_settings'] %}
				<div class=" inline-flex items-center justify-between w-full text-base font-semibold transition-colors duration-150 text-white 00  cursor-pointer  bg-indigo-600 rounded-md hover:bg-indigo-700  p-1" x-on:click="Open = !Open">
				{% else %}
					<div class="p-1 inline-flex items-center justify-between w-full text-base font-semibold transition-colors duration-150 text-white 00  cursor-pointer " x-on:click="Open = !Open">
					{% endif %}
					<span class="inline-flex items-center  text-sm font-semibold text-white  ">
						<img src="{{ asset('images/svg/portfolio.svg') }}" class="h-5 w-5 text-white 00" alt="portfolio">
						<span class="ml-4">SETTINGS</span>
					</span>
					<span>
						<img x-show="!Open" src="{{ asset('images/svg/right_arrow.svg') }}" class="h-5 w-5 text-white" alt="right arrow">
						<img x-show="Open" src="{{ asset('images/svg/right_arrow.svg') }}" class="h-5 w-5 text-white transform rotate-90" alt="under arrow">
					</span>


				</div>

				<div x-show.transition="Open" style="display:none;">
					<ul x-transition:enter="transition-all ease-in-out duration-300" x-transition:enter-start="opacity-25 max-h-0" x-transition:enter-end="opacity-100 max-h-xl" x-transition:leave="transition-all ease-in-out duration-300" x-transition:leave-start="opacity-100 max-h-xl" x-transition:leave-end="opacity-0 max-h-0" class=" mt-2 px-2 space-y-2 overflow-hidden text-sm font-medium  rounded-md  " aria-label="submenu">

						<li class=" {{ app.request.attributes.get('_route') == 'app_settings' ? ' border-b-2  whiteShadow  border-indigo-600 rounded-md py-1  inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' : 'py-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}">
							<div class="px-1   rounded-md">
								<div class="flex items-center">
									<img src="{{ asset('images/svg/personal_information.svg') }}" class="h-4 w-4 text-white 00" alt="">
									<a href="{{ path('app_settings') }}" class="w-full ml-2  text-sm font-semibold  text-white ">Credentials</a>
								</div>
							</div>
						</li>

					</ul>
				</div>
			</li>
		</li>
	</ul>
</div>
