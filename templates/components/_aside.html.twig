							<a href="{{ path('app_projects') }}" class="w-full ml-2  text-sm font-semibold  text-white ">
								<div class="px-1   rounded-md">
									<div class="flex items-center">
										<img src="{{ asset('images/svg/projects.svg') }}" class="h-5 w-5 text-white mr-2" alt="">
										 projects
									</div>
								</div>
							</a>
						</li>

						<li class=" {{ app.request.attributes.get('_route') == 'app_education' ? ' border-b-2 whiteShadow  border-blue-600 rounded-md py-1  inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' : 'py-1 inline-flex items-center w-full text-sm font-semibold text-white transition-colors duration-150 cursor-pointer ' }}">
							<a href="{{ path('app_education') }}" class="w-full ml-2  text-sm font-semibold  text-white ">
