{% extends 'base.html.twig' %}

{% block body %}


	<div class="grid mb-4 pb-10 pt-3   lg:px-8 lg:mx-4 mx-2 rounded-sm bg-black min-h-screen">


		<div class="  transition-colors duration-300 ">
			<div class="container mx-auto p-4">
				<h1 class="text-xl font-semibold text-white m-0 mt-16">
					Create new User
				</h1>
				<hr class="w-[10%] mb-6 mt-2">

				<div class="mb-3 rounded-lg p-6 transition duration-300 ease-in-out transform hover:shadow-lg transition-transform duration-300 ease-in-out ">

					{{ form_start(form, {'attr': {'class': 'space-y-2'}}) }}
					<div>
						{{ form_label(form.email) }}
						{{ form_widget(form.email) }}
						<div class="text-red-600 py-2">
							{{ form_errors(form.email) }}
						</div>
					</div>

					<div>
						{{ form_label(form.password) }}
						{{ form_widget(form.password) }}
						<div class="text-red-600 py-2">
							{{ form_errors(form.password) }}
						</div>
					</div>
					<div>
						<div class="">
							{{ form_label(form.roles) }}
							{{ form_widget(form.roles) }}
						</div>
						<div class="text-red-600 py-2">
							{{ form_errors(form.roles) }}
						</div>
					</div>

					<div class=" w-full flex items-center justify-end">
						{{ form_widget(form.submit) }}

					</div>

					{{ form_end(form) }}


				</div>
			</div>


		</div>

	</div>


{% endblock %}
