{% extends 'base.html.twig' %}

{% block body %}


<div class="grid mb-4 pb-10 px-8 mx-4 rounded-3xl bg-gray-100 border-4 border-[#2DD4BF]">


    <div class="  transition-colors duration-300">
        <div class="container mx-auto p-4">
            <div class="mb-3 shadow-md rounded-lg p-6">
                <h1 class="text-xl font-semibold mb-4 text-gray-900 ">Personal Information</h1>
                <form  action="{{ path('app_update_personal_information') }}" method="post">
                {% if data is defined and data.id is defined %}
                <div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <input type="hidden" name="id" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="id" value="{{ data.id }}">
                        <input type="hidden" name="csrf_token" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="csrf_token" value="{{ csrf_token }}">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                        <input type="text" placeholder="First name" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="firstName" value="{{ data.firstName }}">
                        <input type="text" placeholder="Last name" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="lastName" value="{{ data.lastName }}">
                        <input type="text" placeholder="nick name" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="nickName" value="{{ data.nickName }}">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <input type="email" placeholder="Email address" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="email" value="{{ data.email }}">
                        <input type="text" placeholder="pass word" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="password" value="{{ data.password }}">   
                    </div>
                    <div class="mb-4">
                       <textarea placeholder="about" name="about" class="border focus:border-[#2DD4BF] p-2 rounded w-full" >{{ data.about }}</textarea>
                    </div>
                    <div class="mb-4">
                        <input type="text" placeholder="position" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="position" value="{{ data.position }}">
                    </div>
                </div>
                {% else %}
                <div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        {# <input type="hidden" name="id" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="id" value="6"> #}
                        <input type="hidden" name="csrf_token" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="csrf_token" value="{{ csrf_token }}">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                        <input type="text" placeholder="First name" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="firstName" value="">
                        <input type="text" placeholder="Last name" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="lastName" value="">
                        <input type="text" placeholder="nick name" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="nickName" value="">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <input type="email" placeholder="Email address" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="email" value="">
                        <input type="text" placeholder="pass word" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="password" value="">   
                    </div>
                    <div class="mb-4">
                       <textarea placeholder="about" name="about" class="border focus:border-[#2DD4BF] p-2 rounded w-full" ></textarea>
                    </div>
                    <div class="mb-4">
                        <input type="text" placeholder="position" class="border focus:border-[#2DD4BF] p-2 rounded w-full" name="position" value="">
                    </div>
                </div>
                {% endif %} 
                    <div class=" w-full flex items-center justify-end">
                        <button type="submit" id="theme-toggle" class="px-4 py-2 rounded bg-blue-500 text-white hover:bg-blue-600 focus:outline-none transition-colors">
                            update information
                        </button>
                    </div>
                </form>
            </div>
            <div class=" mb-3 shadow-md rounded-lg p-6">
