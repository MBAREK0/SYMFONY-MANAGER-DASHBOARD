{% extends 'base.html.twig' %}

{% block body %}


	<div class="grid mb-4 pb-10 pt-3   lg:px-8 lg:mx-4 mx-2 rounded-sm bg-black min-h-screen">


		<div class="  transition-colors duration-300 ">
			<div class="container mx-auto p-4">
				<h1 class="text-xl font-semibold text-white m-0 ">Update document</h1>
				<hr class="w-[10%] mb-10 mt-2">
				<div class=" mb-3 whiteShadow rounded-lg p-6">
					{{ form_start(form) }}
					<div>
						{{ form_label(form.name) }}
						{{ form_widget(form.name) }}
						<div class="text-red-600 py-2">
							{{ form_errors(form.name) }}
						</div>
					</div>
					<div>
						{{ form_label(form.file) }}
						{{ form_widget(form.file) }}
						<div class="text-red-600 py-2">
							{{ form_errors(form.file) }}
						</div>
					</div>

					<div class="w-full flex items-center justify-end">
						{{ form_widget(form.submit) }}
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>


{% endblock %}
